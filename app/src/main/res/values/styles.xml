<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="mainLayoutStyle">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="toolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <!--<item name="android:textColorSecondary">@color/colorTextLight</item>-->
    </style>

    <style name="max_width_600">
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Button Style -->
    <style name="baseButtonStyle">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textButtonStyle" parent="baseButtonStyle">
        <item name="android:background">@drawable/button_fill_dark</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="textButtonStyleAccent" parent="textButtonStyle">
        <item name="android:background">@drawable/button_fill_accent</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="iconButtonStyleLeft" parent="textButtonStyle">
        <item name="android:background">@drawable/button_fill_accent</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:gravity">left</item>
        <item name="android:drawablePadding">@dimen/padding</item>
    </style>

    <style name="iconButtonStyle" parent="baseButtonStyle">
        <item name="android:paddingTop">@dimen/icon_margin</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>

    <!-- Text styles -->
    <style name="normalText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="boldText" parent="normalText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mediumText" parent="normalText">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="smallTextStyle" parent="normalText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorTextLighter</item>
    </style>

    <style name="bigText" parent="normalText">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
    </style>

    <style name="titleText" parent="normalText">
        <item name="android:layout_marginTop">@dimen/spacing</item>
        <item name="android:layout_marginBottom">@dimen/spacing</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
    </style>

    <style name="timerText" parent="normalText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="whiteText" parent="normalText">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="descriptionText" parent="normalText">
        <item name="android:textColor">@color/colorTextLighter</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- checkbox -->
    <style name="checkboxStory">
        <item name="android:layout_marginRight">@dimen/spacing</item>
        <item name="android:background">@drawable/checkbox</item>
        <item name="android:button">@drawable/empty</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

